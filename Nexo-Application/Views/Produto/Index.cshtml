@model IEnumerable<NexoApplication.Models.Entities.Produto>
@{
    ViewData["Title"] = "Produtos";
}

<h1>@ViewData["Title"]</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12 text-center">
            <a asp-controller="Produto" asp-action="Create" class="btn btn-success">
                Cadastrar Novo Produto
            </a>
        </div>
        <div class="col-12 ml-auto mr-auto">
            <form class="form row">
                <input name="productName" type="search" class="form-group input-group input-group-text  w-50 h-50 m-2 ml-auto" required placeholder="Buscar produto" />
                <button type="submit" asp-action="Busca" asp-controller="Produto" class="form-group btn btn-success w-25 m-2 mr-auto">Buscar</button>
            </form>
        </div>
    </div>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped m-3">
            <thead>
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        Valor
                    </th>
                    <th>
                        Disponível
                    </th>
                    <th>Cliente</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var produto in Model)
                {
                <tr>
                    <td width="25%">@produto.Nome</td>
                    <td width="25%">@produto.Valor</td>
                    <td width="25%">@produto.Disponivel</td>
                    <td width="25%">@produto.ClienteId</td>
                    <td class="text-center">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Produto" asp-action="Edit" asp-route-Id="@produto.ProdutoId" class="btn btn-primary">Editar</a>
                            <a asp-controller="Produto" asp-action="Delete" asp-route-Id="@produto.ProdutoId" class="btn btn-danger">Deletar</a>
                        </div> 
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nenhum produto encontrado.</p>
    }
</div>

