@model NexoApplication.Models.Entities.Produto

@{
    ViewData["Title"] = "Criar";
}
<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="pl-3 text-info">Novo Produto</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2 pt-1">
                        <label asp-for="Nome"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Nome" type="text" required class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="col-2 pt-1">
                        <label asp-for="Valor"></label>                      
                    </div>
                    <div class="col-4">
                        <input asp-for="Valor" type="number" required class="form-control" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                </div>

                    <div class="form-group row">
                        <div class="col-2 pt-1">
                            <label asp-for="Disponivel"></label>
                        </div>
                        <div class="col-4">
                            <input asp-for="Disponivel" type="checkbox" class="custom-checkbox" />
                            <span asp-validation-for="Disponivel" class="text-danger"></span>
                        </div>
                        <div class="col-2 pt-1">
                            Cliente
                        </div>
                        <div class="col-4">
                            <input asp-for="ClienteId" type="number" class="form-control" required />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4 row offset-4">
                            <div class="col">
                                <a asp-action="Index" class="btn btn-secondary w-75">Cancelar</a>
                            </div>
                            <div class="col">
                                <button type="submit" class="btn btn-success w-75">Salvar</button>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</form>

