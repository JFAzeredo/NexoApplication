@model NexoApplication.Models.Entities.Produto

@{
    ViewData["Title"] = "Deletar";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="DeleteProduto">
    <input asp-for="ProdutoId" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="pl-3 text-info">Deletar Produto</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2 pt-1">
                        <label asp-for="Nome"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Nome" type="text" class="form-control" disabled />
                    </div>
                    <div class="col-2 pt-1">
                        <label asp-for="Valor"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Valor" type="text" class="form-control" disabled />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2 pt-1">
                        <label asp-for="ClienteId">Cliente</label>
                    </div>
                    <div class="col-4">
                        <input asp-for="ClienteId" type="text" value=@ViewBag.ClientName  required class="form-control" disabled/>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2 pt-1">
                        Disponível
                    </div>
                    <div class="col-2 pt-1">
                        <input type="checkbox" class="custom-checkbox" disabled />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4 row offset-4">
                        <div class="col">
                            <a asp-action="Index" class="btn btn-secondary w-75">Cancelar</a>
                        </div>
                        <div class="col">
                            <button type="submit" asp-action="DeleteProduto" asp-route-Id="@Model.ProdutoId" class="btn btn-danger w-75">Deletar</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

