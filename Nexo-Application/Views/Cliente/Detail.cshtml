@model NexoApplication.Models.Entities.Cliente

@{
    ViewData["Title"] = "Detalhes";
}

<h1>@ViewData["Title"]</h1>

<div class="container-fluid">
    <h1 class="pt-3 title-text-detail">@Model.Nome @Model.SobreNome</h1>

    <div class="box-shadow ">
        <div class="pt-2 col-12 justify-content-start d-flex">
            <span class="col-lg-6 align-baseline mt-1">ID:</span>
            <output type="text" class="col-lg-6 input-group-text mb-1 justify-content-center">@Model.ClienteId</output>
        </div>
        <div class="pt-2 col-12 justify-content-start d-flex">
            <span class="col-lg-6 align-baseline mt-1">Email:</span>
            <output type="text" class="col-lg-6 input-group-text mb-1 justify-content-center">@Model.Email</output>
        </div>
        <div class="pt-2 col-12 justify-content-start d-flex">
            <span class="col-lg-6 align-baseline mt-1">Data de Cadastro:</span>
            <output type="text" disabled class="col-lg-6 input-group-text mb-1 justify-content-center">@Model.DataCadastro.Day / @Model.DataCadastro.Month / @Model.DataCadastro.Year </output>
        </div>
        <div class="pt-2 col-12 justify-content-start d-flex">
            <span class="col-lg-6 align-baseline mt-1">Ativo:</span>
            <input type="checkbox" checked=@Model.Ativo class="col-lg-6 input-group-text mb-1">
        </div>
        <div class="text-center">
            <div class="w-25 btn-group mt-5" role="group">
                <a asp-controller="Cliente" asp-action="Index" class="btn btn-primary">Voltar</a>
                <a asp-controller="Cliente" asp-action="Delete" asp-route-Id="@Model.ClienteId" class="btn btn-danger">Deletar</a>
            </div>
        </div>
    </div>
    
    <div class="mt-3">
        <h1 class="pt-3 title-text-detail">Produtos</h1>
        <div class="box-shadow">
            <div>
                <table class="table table-striped table-borderless table-responsive">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Valor</th>
                            <th>Disponivel</th>
                        </tr>
                    </thead>
                    @foreach (var produto in ViewBag.Produtos)
                    {
                        <tr>
                            <td width="10%">@produto.Nome</td>
                            <td width="10%">@produto.Valor</td>
                            <td width="10%">@produto.Disponivel</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

</div>

