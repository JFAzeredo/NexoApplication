@model IEnumerable<NexoApplication.Models.Entities.Cliente>

@{
    ViewData["Title"] = "Busca - Cliente";
}

<h1>@ViewData["title"]</h1>

<div class="container p-3">

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped m-3">
            <thead>
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        Sobrenome
                    </th>
                    <th>
                        Data de Cadastro
                    </th>
                    <th>
                        E-mail
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td width="25%">@cliente.Nome</td>
                        <td width="25%">@cliente.SobreNome</td>
                        <td width="25%">@cliente.DataCadastro</td>
                        <td width="50%">@cliente.Email</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Cliente" asp-action="Edit" asp-route-Id="@cliente.ClienteId" class="btn btn-primary">Editar</a>
                                <a asp-controller="Cliente" asp-action="Delete" asp-route-Id="@cliente.ClienteId" class="btn btn-danger">Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nenhum cliente encontrado.</p>
    }
</div>
