@model NexoApplication.Models.Entities.Cliente

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <input asp-for="ClienteId" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="pl-3 text-info">Editar Cliente</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2 pt-1">
                        <label asp-for="Nome"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Nome" type="text" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="col-2 pt-1">
                        <label asp-for="SobreNome"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="SobreNome" type="text" class="form-control" />
                        <span asp-validation-for="SobreNome" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2 pt-1">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Email" type="text" required class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2 pt-1">
                        Ativo
                    </div>
                    <div class="col-2 pt-1">
                        <input asp-for="Ativo" type="checkbox" class="custom-checkbox" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4 row offset-4">
                        <div class="col">
                            <a asp-action="Index" class="btn btn-secondary w-75">Cancelar</a>
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-success w-75">Atualizar</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

